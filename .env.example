# ===========================================
# Plant Disease Detection Chatbot
# Environment Variables Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ==================== LINE Configuration ====================
# Get these from LINE Developers Console
# https://developers.line.biz/console/

# LINE Channel Access Token (Messaging API)
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here

# LINE Channel Secret (Messaging API)
LINE_CHANNEL_SECRET=your_line_channel_secret_here

# ==================== Gemini AI Configuration ====================
# Get API key from Google AI Studio
# https://aistudio.google.com/app/apikey

# Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model (default: gemini-2.0-flash-exp)
GEMINI_MODEL=gemini-2.0-flash-exp

# ==================== Redis Configuration ====================
# Redis connection URL
# Format: redis://[:password]@host:port/db_number

# Local development
REDIS_URL=redis://localhost:6379/0

# Docker compose
# REDIS_URL=redis://redis:6379/0

# Cloud Redis (with password)
# REDIS_URL=redis://:password@redis-host:6379/0

# ==================== Database Configuration ====================
# PostgreSQL connection URL
# Format: postgresql://user:password@host:port/database

# Local development
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/plant_disease

# Docker compose
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/plant_disease

# Cloud SQL
# DATABASE_URL=postgresql://user:password@cloud-sql-host:5432/plant_disease

# ==================== Application Configuration ====================
# Environment: dev, staging, prod
ENVIRONMENT=dev

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable debug mode (shows detailed errors)
DEBUG=true

# ==================== Image Processing ====================
# Maximum image size in MB (default: 5)
MAX_IMAGE_SIZE_MB=5

# Maximum image dimension in pixels (default: 1024)
IMAGE_MAX_DIMENSION=1024

# Image compression quality 1-100 (default: 85)
IMAGE_QUALITY=85

# ==================== Cache Configuration ====================
# Diagnosis cache expiry in hours (default: 24)
CACHE_EXPIRY_HOURS=24

# User session expiry in hours (default: 1)
USER_STATE_EXPIRY_HOURS=1

# ==================== Rate Limiting ====================
# Maximum diagnoses per user per hour (default: 10)
MAX_REQUESTS_PER_HOUR=10

# ==================== API Retry Configuration ====================
# Maximum retry attempts (default: 3)
API_MAX_RETRIES=3

# Initial retry delay in seconds (default: 1.0)
API_RETRY_DELAY=1.0

# ==================== Monitoring (Optional) ====================
# Sentry DSN for error tracking
# Get from https://sentry.io/
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
